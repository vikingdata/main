[mysqld]


pid-file = /tmp/mysql__no__.pid
user                     = mysql
bind-address             = 127.0.0.1
server-id                = 2

# CREATE USER 'rep'@'127.0.0.1' IDENTIFIED WITH mysql_native_password BY 'rep';
# FLUSH PRIVILEGES;

#CHANGE REPLICATION SOURCE TO
#SOURCE_HOST='127.0.0.1',
#SOURCE_USER='rep',
#SOURCE_PASSWORD='rep',
#SOURCE_LOG_FILE='mysql-bin.000003',
#SOURCE_LOG_POS=899;

general_log = 1

innodb_data_home_dir                = /var/lib/mysql/mysql2
innodb_buffer_pool_size             = 3222111
innodb_buffer_pool_filename         = /var/lib/mysql/mysql2/ib_buffer_pool
innodb_data_file_path               = /var/lib/mysql/mysql2/ibdata1:3222111
innodb_log_group_home_dir           = /var/lib/mysql/mysql2
innodb_file_per_table=ON


socket =                      /tmp/mysql2.sock

port                           = 3302
socket                         = /tmp/mysql2.sock

log_bin                  =       /var/log/mysql/mysql2/binlogs/mysql-bin.log
log-error                      = /var/log/mysql/mysql2/error.log
general_log_file               = /var/log/mysql/mysql2/general.log
log_slave_updates              = 1

# only on delayed slaves.
#CHANGE MASTER TO MASTER_DELAY = 10;

# Put on the masters
# Then you can check if semi synchronous replication is on
# by looking at the Slave's status variable.
 rpl_semi_sync_master_enabled=ON
#

# Enable on slave, might have to restart replication.
# Then you can check if semi synchronous replication is on
# by looking at the Slave's status variable.
# rpl_semi_sync_slave_enabled=ON

